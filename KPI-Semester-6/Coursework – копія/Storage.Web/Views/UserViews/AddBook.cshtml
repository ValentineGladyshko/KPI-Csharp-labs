@model Storage.Web.Models.UserView

@{
    ViewBag.Title = "AddBook";
    SelectList list = new SelectList(ViewBag.Books, "BookID", "Name");
}

<h2>Add Book To User</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>BookView</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserID)

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control text-box single-line" value="@Model.FirstName" readonly="readonly">
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control text-box single-line" value="@Model.LastName" readonly="readonly">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Book</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Quantity, list, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
