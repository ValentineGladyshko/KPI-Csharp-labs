@model string

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Ajax.BeginForm("GetProducts", new AjaxOptions { UpdateTargetId = "results" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-3">
                @Html.TextBox("searchString", Model as string, new { @class = "form-control" })
            </div>
            <input type="hidden" name="sortType" value="0"/>
            <div class="col-md-2">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<br />
<div id="results">  
        @Html.Action("GetProducts", new { Model, sortType = 0 });
</div>